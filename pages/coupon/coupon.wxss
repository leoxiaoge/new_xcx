/*以上是之前版本*/
.coupon-ul{
  padding: 30rpx;
  font-family: "微软雅黑";
}
.coupon-li{
  width: 100%;
  height: 245rpx;
  background-image: url(https://www.qiaolibeilang.com/public/xcx/coupon.png);
  background-size: 100% 100%;
  margin-bottom: 30rpx;
  display: flex;
}
.cou-left{
  width: 275rpx;
  height: 245rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.h-con{
  text-align: center;
}
.cou-right{
  width: 415rpx;
  height: 245rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cou-left>view{
  clear: both;
  width: 275rpx;
}
.cou-price{
  color: #d71e1e;
  font-size: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.cou-price-text{
  font-size: 24rpx;
  color: #666666;
  height: 24rpx;
  line-height: 24rpx;
  margin-top: 23rpx;
}
.h-con-r{
  font-size: 24rpx;
  line-height: 50rpx;
  color: #666;
}
.surplus-day{
  color: #333;
}
.filter{
  filter: grayscale(100%);
}
/*没有优惠券样式  */
.none-warp{
  color: #666;
  font-size: 28rpx;
  text-align: center;
  position: relative;
  top: 200rpx;
}
.none-warp>image{
  width: 200rpx;
  height: 200rpx;
}
.no-coupon{
  color: #cdcdcd;
  font-size: 26rpx;
}