/* pages/give/give.wxss */
.give-warp{
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  min-height: 100%;
  background: #f3f7fa;
}
.card{
  width: 690rpx;
  height: 450rpx;
  background-image: url('http://www.qiaolibeilang.com/public/new_xcx/card-2.jpg');
  background-size: 100% 100%;
  margin: 30rpx;
  position: relative;
  color: #fff;
}
.card-name {
  position: absolute;
  font-size: 30rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  top: 50%;
  margin-top: -20rpx;
  left: 50rpx;
}
.card-price{
  position: absolute;
  height: 40rpx;
  display: flex;
  align-items: center;
  top: 50%;
  margin-top: -20rpx;
  right: 100rpx;
  color: #1ca6f8;
  font-size: 36rpx;
}
.card-btn{
  text-align: center;
}
.card-btn>view{
  display: inline-block;
  background: #1ca6f8;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
}
.tec-warp{
  margin: 100rpx 30rpx 30rpx 30rpx;
}
.tec-top{
  position: relative;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}
.top-hr{
  position: absolute;
  width: 100%;
  border-bottom: 1rpx solid #e5e5e5;
  left: 0px;
  top: 50%;
   z-index: 10; 
}
.top-title{
  position: relative;
  display: inline-block;
  background: #f3f7fa;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #666;
  z-index: 20;
}
/*tec-mark  */
.tec-mark{
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  min-height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 99;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tec-main{
  width: 600rpx;
  min-height: 120rpx;
  background: #fff;
  border: 1px solid #e5e5e5;
  border-radius: 14rpx;
  overflow: hidden;
  padding: 30rpx;
  position: relative;
}
.tec-top{
  display: flex;
  justify-content: center;
  color: #666;
}
.tec-input{
  border: 1rpx solid #e5e5e5;
  font-size: 30rpx;
  padding-left: 10rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 50rpx;
  color: #666;
}
 .tec-tip{
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
  padding: 20rpx 0;
  text-align: justify;
} 
.tec-close{
  position: absolute;
  top: 0px;
  right: 0px;
  padding: 20rpx;
  font-size: 34rpx;
  line-height: 1;
  color: #666;
}
.tec-btn{
  background: #1ca6f8;
  color: #fff;
  border:none;
}
.tec-btn::after{
  border: none;
}