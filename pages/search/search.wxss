/* pages/search/search.wxss */
.bg-view{
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background: #efefef;
}
.rearch-bar{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 20rpx 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;
}
.rearch-bar .back{
  width: 45rpx;
  height: 45rpx;
}
.rearch-bar .rearch{
  width: 42rpx;
  height: 42rpx;
}
.input-warp{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  border-radius: 30rpx;
  background: #e7e7e7;
  height: 60rpx;
  padding-left: 20rpx;
  margin-right: 20rpx;
  width: 500rpx;
}
.input-warp input{
  width: 100%;
  font-size: 28rpx;
  color: #666;
  text-align: left;
  display: flex;
  padding-left: 10rpx;
  line-height: 60rpx;
}
.rearch-right{
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.rearch-text{
  color: #1ca6f8;
  font-size: 30rpx;

}
.rearch-tip{
  padding: 0 30rpx 30rpx 30rpx;
  background: #fff;
}
.tip-title{
  height: 74rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #999;
  border-bottom: 1rpx solid #e5e5e5;
  padding-right: 20rpx;
}
.tip-main{
  color: #333;
  font-size: 24rpx;
}
.tip-text{
  display: inline-block;
  padding: 16rpx;
  background: #fff;
  border: 1rpx solid #e5e5e5;
  margin: 20rpx 20rpx 0 0;
  border-radius: 6rpx;
  overflow: hidden;
  text-align: center;
  width: 80rpx;
}
.history-tip{
  margin-top: 20rpx;
}
.del{
  width: 40rpx;
  height: 40rpx;
}

/*搜索出来的内容  */
.bk-ul{
  background: #fff;
  margin-top: 20rpx;
  padding: 20rpx;
}
.bk-li{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bk-left{
  display: flex;
  align-items: flex-start;
  width: 75%;
}
.bk-left image{
  width: 120rpx;
  height: 120rpx;
  background: #eee;
  border-radius: 4rpx;
  margin-right: 20rpx;
}
.bk-name{
  font-size: 30rpx;
  color: #333;
  padding-top: 10rpx;
}
.bk-price{
  font-size: 30rpx;
  color: red;
  padding-top: 10rpx;
}
.bk-right{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 25%;
}
.bk-right image{
  width: 50rpx;
  height: 50rpx;
}
.bk-right view{
  width: 40rpx;
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
}