/* pages/sk_card/sk_card.wxss */
.sk_card-warp{
  background: #f9f5e8;
  padding-top: 30rpx;
}
 .card-swiper{
  height: 450rpx;
  text-align: center;
} 
.card-warp{
  text-align: center;
  margin-top: 30rpx;
}
.card_bg{
  width: 690rpx;
  height: 450rpx;
  margin: 0 auto;
  background-size: 100% 100%;
  position: relative;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 40rpx;
}
.card-name{
  position: absolute;
  top: 50%;
  left: 40rpx;
  font-size: 34rpx;
  line-height: 1;
  margin-top: -17rpx;
}
.card-time{
  position: absolute;
  bottom: 20rpx;
  right: 30rpx;
  font-size: 24rpx;
  color: #e3e3e3;
}
.card-tip{
  position: absolute;
  top: 0px;
  right: 100rpx;
  width: 160rpx;
  height: 100%;
  display: flex;
  /* justify-content: center; */
  align-items: center;
  /* background: #fff; */
  flex-wrap: wrap;
  text-align: center;
}
.care-btn{
  display: inline-block;
  height: 88rpx;
  background: #1ca6f8;
  color: #fff;
  font-size: 32rpx;
  border-radius: 10rpx;
  padding: 0 60rpx;
  line-height: 88rpx;
  margin: 0 0 30rpx 0;
}
.price{
  font-size: 48rpx;
  color: #1ca6f8;
}
.number{
  font-size: 28rpx;
}
.number text{
  font-size: 32rpx;
  color: #1ca6f8;
  padding: 0 4rpx;
}
.sk-main{
  display: block;
  width: 750rpx;
  height: 4458rpx;
  margin-top:20rpx; 
}
.record{
  padding: 32rpx;
  background: #fff;
}
.record-top{
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}
.record-hr{
  position: absolute;
  top: 50%;
  left: 0px;
  width: 100%;
  border-bottom: 1rpx solid #1ca6f8;
  /* z-index: -1; */
}
.record-title{
  background: #fff;
  font-size: 28rpx;
  padding: 0 30rpx;
  color: #333;
  position: relative;
  z-index: 1;
}
.record-li{
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #666;
  font-size: 26rpx;
  height: 80rpx;
}
.btn-warp{
  padding: 0 30rpx;
  text-align: center;
  position: relative;
}
.set-pay{
  color: #1ca6f8;
  font-size: 26rpx;
  box-sizing:border-box;
}
.set-pass-warp{
  text-align: center;
  padding: 30rpx;
}
.text-ul{
  background: #fff;
  text-align: center;
  padding: 40rpx 0;
  color: #1ca6f8;
  font-size: 28rpx;
  line-height: 2;
  font-weight: 500;
}
.text-ul > view:nth-child(1){
  font-size: 32rpx;
}
.inst-warp{
  background: #fff;
  padding: 30rpx;
}
.inst-main{
  background: #1ca6f8;
  padding: 40rpx;
  border-radius: 20rpx;
  color: #fff;
}
.inst-title{
  font-size: 30rpx;
  text-align: center;
  padding-bottom: 20rpx;
}
.inst-text{
  font-size: 24rpx;
  line-height: 2;
}
.rec-none{
  color: #666;
  font-size: 24rpx;
  padding-top: 40rpx;
  text-align: center;
}