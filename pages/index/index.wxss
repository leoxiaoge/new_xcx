/**index.wxss**/
.index-scroll{
   position: absolute; 
   top: 0px;
   left: 0px;
   height: 100%;
}
.banner {
  width: 100%;
  height: 300rpx;
  background: #eee;
}
.index-top{
  height: 300rpx;
}

.modular .name {
  color: #fff;
}

.modular-title {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 70rpx;
  text-align: center;
  font-size: 28rpx;
  color: #000000;
  /* font-weight: bold; */
}

.modular-min-4, .modular-min-2, .modular-min-3 {
  display: flex;
  font-size: 32rpx;
  /* border-top: 1rpx solid #eff5ff;
  border-bottom: 1rpx solid #eff5ff; */
  justify-content: flex-start;
  flex-wrap: wrap;
}

.modular-min-4>navigator {
  width: 25%;
  height: 190rpx;
  overflow: hidden;
  text-align: center;
  box-sizing: border-box;
  /* border-right: 1rpx solid #eff5ff;
  border-bottom: 1rpx solid #eff5ff; */
  color: #fff;
  background-repeat:no-repeat;
  background-size: 100% 100%; 
  position: relative;
}

.modular-min-4>view:nth-last-child(1) {
  border-radius: none;
}

.modular-min-4 .name {
  position: absolute;
  bottom: 10rpx;
  left: 0px;
  width: 100%;
  text-align: center;
  color: #333;
  font-size: 30rpx;
}

.ball-warp {
  width: 100%;
  height: 175rpx;
  position: relative;
}

.ball-warp image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

.hr {
  height: 30rpx;
  background: #f3f7fa;
}

.modular-min-3>view {
  width: 33%;
  overflow: hidden;
  /* border-right: 1rpx solid #eff5ff;
  border-bottom: 1rpx solid #eff5ff; */
  box-sizing: border-box;
  text-align: center;
}

.modular-min-3>view:nth-last-child(1) {
  /* border-right: 1rpx solid #eff5ff; */
}

.modular-min-3 image {
  width: 220rpx;
  height: 200rpx;
}

.modular-min-3 .name {
  height: 80rpx;
  line-height: 80rpx;
}

.footer-bar {
  /* height: 175rpx; */
  display: flex;
  justify-content: flex-start;
  font-size: 26rpx;
  color: #333;
  /* border-top: 1rpx solid #eff5ff;
  border-bottom: 1rpx solid #eff5ff; */
}

.footer-bar>navigator {
  width: 25%;
  height: 100%;
  overflow: hidden;
  text-align: center;
  padding: 30rpx 0;
}

.footer-bar image {
  width: 60rpx;
  height: 60rpx;
}

.img-warp {
  border: 1rpx solid #8a8a8a;
  width: 90rpx;
  height: 90rpx;
  margin: 0 auto;
  border-radius: 18rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 22rpx;
}

/*search  */

.search-warp {
  position: fixed;
  top: 0px;
  left: 0px;
  z-index: 100;
  width: 100%;
  background-color: rgba(0, 0, 0, 0);
  display: flex;
  justify-content: space-between;
}

.search-warp>view {
  width: 340rpx;
  margin: 20rpx;
  height: 62rpx;
  border-radius: 30rpx;
}

.map-address {
  background-color: rgba(0, 0, 0, 0.4);
  color: #fff;
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10rpx;
  box-sizing: border-box;
  border: 1rpx solid rgba(255, 255, 255, 0.4);
}

.map-address>image {
  width: 36rpx;
  height: 36rpx;
}

.map-address>view {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 245rpx;
}

.search-input {
  background-color: rgba(255, 255, 255, 0.6);
  display: flex;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  padding: 0 10rpx;
}

.search-input>image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}

.search-input>input {
  color: #666;
  font-size: 26rpx;
  display: flex;
  align-items: center;
}

.scroll-set {
  background-color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
}

.scroll-set>.map-address {
  display: none;
}

.scroll-set>.search-input {
  width: 100%;
  margin: 10rpx 20rpx;
}

.scroll-set input {
  width: 100%;
}

/*活动专区  */

.act-warp {
  display: block;
  padding-bottom: 30rpx;
  /* border-top: 1rpx solid #eff5ff;
  border-bottom: 1rpx solid #eff5ff; */
}

.act-con-warp {
  padding: 0 30rpx;
}
.act-main{
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  /* padding-bottom: 30rpx; */
}
.act-main >navigator:nth-child(1){
  background-image: url('http://www.qiaolibeilang.com/public/new_xcx/card-1.jpg');
}
.act-main >navigator:nth-child(2){
  background-image: url('http://www.qiaolibeilang.com/public/new_xcx/card-2.jpg');
}
.act-main >navigator{
  width: 333rpx;
  height: 217rpx;
  background-size: 100% 100%;
  position: relative;
  border-radius: 20rpx;
  overflow: hidden;
}
/* .act-main >navigator:nth-child(1) .act-mark{
  background-color: rgba(0, 0, 0, 0);
} */
.act-mark{
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0);
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 20rpx;
   padding: 20rpx; 
  box-sizing: border-box;
  text-align: center;
}
.act-swiper {
  height: 220rpx;
}

.act-con-2 {
  display: flex;
  justify-content: space-between;
}

.act-con-2>image {
  width: 340rpx;
  height: 220rpx;
  background: #eee;
}

.act-con-4 {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.act-con-4>image {
  display: flex;
  justify-content: space-between;
  width: 160rpx;
  height: 220rpx;
  background: #eee;
}

/*评价专区  */
.eval-warp{
  /* border-top: 1rpx solid #eff5ff; */
}
.eval-con {
  /*background-image: url('https://www.qiaolibeilang.com/public/xcx/pl_bg.jpg');*/
