  background: #f3f7fa;
}

.eval-main {
  width: 630rpx;
  margin: 0 auto;
  height: 220rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.eval-swiper {
  height: 220rpx;
}

.eval-left, .eval-right {
  width: 30rpx;
  height: 100%;
  background-size: 100% 100%;
}

.eval-left {
  background-image: url('https://www.qiaolibeilang.com/public/xcx/pl_left.png');
}

.eval-right {
  background-image: url('https://www.qiaolibeilang.com/public/xcx/pl_right.png');
}

.eval-main-con {
  background: #fff;
  width: 572rpx;
  height: 202rpx;
  box-sizing: border-box;
  padding: 11rpx 0;
  position: relative;
}

.eval-tel, .eval-time {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  padding-top:6rpx; 
}

.eval-tel {
  text-align: left;
}

.eval-time {
  text-align: right;
  position: absolute;
  bottom: 0px;
  left: 0px;
  width: 100%;
  padding-bottom: 14rpx;
  font-size: 26rpx;
}

.eval-text {
  font-size: 26rpx;
  color: #666;
  padding: 8rpx 0;
  height: 90rpx;
  line-height: 1.3;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.eval-lang {
  text-align: center;
  font-size: 26rpx;
  line-height: 2;
  color: #000000;
}
