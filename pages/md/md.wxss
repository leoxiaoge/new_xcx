/* pages/md/md.wxss */
.md-warp{
  padding: 30rpx 0;
}
.md-top{
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #1ca7f9;
  padding: 10rpx 20rpx;
}
.md-left image,.md-right image{
  width: 30rpx;
  height: 30rpx;
  position: relative;
  z-index: 10;
}
.md-left view,.md-right view{
  border-bottom: 1rpx solid #1ca7f9;
  width: 100%;
  left: 0px;
  top: 50%;
  z-index: 20;
  box-sizing: border-box;
}
.md-left,.md-right{
  display: flex;
  align-items: center;
  width: 35%;
  position: relative;
}
.md-left image{
  transform:rotate(180deg);
}
.md-title{
  display: flex;
  justify-content: center;
  align-items: center;
}
.md-text{
  border: 1rpx solid #1ca7f9; 
  border-radius: 10rpx;
  color: #666;
  font-size: 26rpx;
  text-align: center;
  padding: 0 14rpx 10rpx 14rpx;
}
.md-ul{
  margin: 0 30rpx;
  padding-top: 40rpx;
}
.md-li{
  margin-top: 30rpx;
}
.md-li:nth-last-child(1) .md-down{
  display: none;
}
.md-btn{
  display: inline-block;
  height: 60rpx;
  padding: 0 20rpx;
  line-height: 60rpx;
  /* background: #fff; */
  border: 1rpx solid #1ca7f9;
  /* color: #1ca7f9; */
  border-radius: 6rpx;
  position: relative;
  top: -30rpx;
  background: #1ca7f9;
  color: #fff;
}
.md-ms{
  position: relative;
  top: -10rpx;
  color: #1ca7f9;
}
.md-down{
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.md-down image{
  width: 30rpx;
  height: 30rpx;
  transform:rotate(90deg);
  
}
.md-img-warp{
  position: relative;
  height: 150rpx;
}
.md-img-warp>image{
  position: absolute;
  top: -75rpx;
  right: -30rpx;
  width: 300rpx;
  height: 300rpx;
  z-index: 100;
}