/* pages/pay/pay.wxss */
.pay-warp{
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  background: #f3f3f3;
}
.pay-price{
  margin: 20rpx;
  background: #fff;
  padding: 30rpx;
  text-align: center;
  position: relative;
}
.price-title{
  position: absolute;
  width: 100%;
  top: 0px;
  left: 0px;
  font-size: 34rpx;
  color: #333;
  line-height: 3;
}
.price-number{
  font-size: 80rpx;
  line-height: 1.6;
  color: #000;
  padding-top: 50rpx;
}
.pay-type{
  margin: 20rpx;
  /* padding: 0 20rpx; */
  background: #fff;
  padding-bottom: 20rpx;
}
.pay-top{
  font-size: 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
  height: 60rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 20rpx;
}
.label-li{
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  padding: 20rpx;
  border-bottom: 1rpx solid #e9e9e9;
  box-sizing: border-box;
}
.label-left{
  display: flex;
  align-items: center;
}
.label-left image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
radio .wx-radio-input{
  width: 40rpx;
  height: 40rpx;
}
.pay-main{
  padding: 0 16rpx;
}
.pay-btn{
  margin: 80rpx 20rpx;
  background: #1aad19;
  color: #fff;
  font-size: 36rpx;
  border: none;
}

/*宿卡支付密码输入  */
.mark_sk{
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  min-height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
}
.sk-main{
  width: 600rpx;
  min-height: 200rpx;
  background: #fff;
  position: relative;
  padding: 20rpx;
  border-radius: 14rpx;
  margin-bottom: 200rpx;
}
.colse{
  position: absolute;
  top: 0px;
  right: 0px;
  color: #999;
  font-size: 32rpx;
  padding: 20rpx;
  line-height: 1;
}
.pass-label{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  margin-top: 50rpx;
  width: 80%;
  margin: 80rpx auto 50rpx auto;
}
.pass-label input{
  border: 1rpx solid #e5e5e5;
  height: 60rpx;
  padding: 0;
  width: 300rpx;
  padding-left: 10rpx;
}
.sun_btn{
  margin: 0;
  height: 70rpx;
  font-size: 30rpx;
  background: #1aad19;
  color: #fff;
  padding: 0 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
}
.back-pass{
  display: flex;
  justify-content: center;
  color: #1ca6f8;
  font-size: 24rpx;
}