.hr{
  height: 30rpx;
  background: #f3f7fa;
}
.top{
  height: 300rpx;
   background: url('http://www.qiaolibeilang.com/public/new_xcx/bg-user.jpg'); 
  background-size: 100% 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  /* border-bottom: 1rpx solid #bbafb2; */
}
.top-left{
  width: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  font-size: 30rpx;
  color: #1ca6f8;
  line-height: 1;
}
.top-left image{
  width: 150rpx;
  height: 150rpx;
  background: #e5e5e5;
  border-radius: 50%;
  margin-bottom: 30rpx;
}
/*ball  */
.ball-warp{
  padding: 0 30rpx;
  /* border-bottom: 1rpx solid #e4edff; */
}
.ball-top{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e1e1e1;
  box-sizing: border-box;
}
.ball-left{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}
.ye-price{
  color: #1ca6f8;
}
.ball-left image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 16rpx;
}
.ball-right{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #1ca6f8;
}
.ball-right image{
  width: 40rpx;
  height: 40rpx;
}
.ye-price{
  padding-left: 10rpx;
}
.ball-3-warp,.ball-2-warp{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 690rpx;
  margin: 0 auto;

}
.ball-3{
  margin: 30rpx 0;
  height: 80rpx;
  box-sizing: border-box;
  width: 230rpx;
  position: relative;
}
.ball-3:nth-child(2){
  border-right: 1rpx solid #e1e1e1;
  border-left: 1rpx solid #e1e1e1;
}
.ball-main-top{
  font-size: 26rpx;
  color: #151515;
  display: flex;
  align-items:flex-start;
  justify-content: center;
  line-height: 1;
}
.ball-main-top image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.ball-main-bom,.ball-main-bom-none{
  font-size: 28rpx;
  color: #19a930;
  display: flex;
  justify-content: center;
  position: absolute;
  bottom: 0px;
  left: 0px;
  width: 100%;
  line-height: 1;
}
.ball-main-bom-none{
  color: #999;
}
