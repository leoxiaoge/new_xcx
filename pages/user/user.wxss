/*bar  */
.bar-warp{
  /* border-top: 1rpx solid #e4edff;
  border-bottom: 1rpx solid #e4edff; */
}
.bar-bar{
  padding: 0 30rpx;
}
.bar-bar-con{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.bar-bar:nth-last-child(1) .bar-bar-con{
  border-bottom: none;
}
.bar-left{
  font-size: 30rpx;
  color: #333;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.bar-left image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 14rpx;
}
 .bar-left .hot-img{
   margin-left: 14rpx;
} 
.bar-right{
  width: 42rpx;
  height: 42rpx;
}
/*tel  */
.tel-warp{
  display: flex;
  justify-content: center;
  align-items: center;
  /* border-top: 1rpx solid #e4edff;
  border-bottom: 1rpx solid #e4edff; */
  padding: 16rpx 0;
}
.tel-warp > navigator,.tel-warp > button{
  width: 50%;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  box-sizing: border-box;
}
.tel-warp > navigator:nth-child(1){
  border-right: 1rpx solid #e5e5e5;
}
.tel-warp image{
  width: 46rpx;
  height: 46rpx;
  margin-right: 20rpx;
}
.wechat::after{
  border: none;
}
.wechat{
  background: #fff;
  border: none;
}
.order-list{
  display: flex;
  align-items: center;
}
